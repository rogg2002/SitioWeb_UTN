<div class="container" style="margin-top: 10px ;margin-bottom: 100px ; ">
    
    {{!-- -------Fila de login------- --}}
    <div class="row">
        <p style="text-align: right;">Hola <span style="text-transform: uppercase;">{{usuario}}</span><a class="btn btn-danger"  href="/admin/login/logout">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
   
    </div>
    {{!-- ----------Fin FIla Login-------}}

    {{!-- ----------inicio Listado novedades--------- --}}

    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2>Lista de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
        </div>

    </div>

    {{!-- -------------Tabla de Novedades----------------- --}}

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-pencil-alt"></i> Modificar</a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i 
                            class="fas fa-trash"></i> Eliminar</a>
                        </td>

                    </tr>
                    {{/each}}

                </tbody>


            </table>
            
        </div>

    </div>


</div>