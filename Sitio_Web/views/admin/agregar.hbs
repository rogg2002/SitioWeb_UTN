<div class="container">
    <div class="row text-center login-page">
        <div class="col-md-12 login-form">
            <h3>Agregar Novedades</h3>
            <form action="/admin/novedades/agregar" method="post">
                <div class="row">
                    <div class="col-md-12 login-form-header">

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 login-from-row" >
                        <input name="titulo" type="text" placeholder="Titulo" style="width: 80%;text-align:center;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 login-from-row">
                        <textarea name="subtitulo" id="" cols="50" rows="5" placeholder="Subtitulo"></textarea>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 login-from-row">
                        <textarea name="cuerpo" id="" cols="50" rows="10" placeholder="Cuerpo"></textarea>

                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
            {{#if error}} 
            <p>{{message}}</p>
            {{/if}}
            
        </div>
    </div>
</div>